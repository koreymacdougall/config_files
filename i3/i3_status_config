general {
    output_format = "i3bar"
    colors = true
    interval = 1
}

order += "disk /"
order += "tztime local"
order += "battery 0"

disk "/" {
    format = "%free"
}

tztime local {
    format = "%m-%d %H:%M:%S"
}

battery 0 { 
	format = "%status %percentage"
	format_down = "No battery" 
	status_chr = "⚇ CHR"
	status_bat = "⚡ BAT"
	status_full = "☻ FULL"
	path = "/sys/class/power_supply/BAT%d/uevent"
	low_threshold = 10 
}
